@model IEnumerable<ProductCategory>

@Html.ActionLink("New", "Create", "Home", new { @class = "btn btn-outline-primary waves-effect btn-sm shadow-none" })

@if (Model == null || !Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryId)
                   
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <span>There is no data</span>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-light">
                <tr>

                    <th class="text-center">Id</th>
                    <th class="text-center">Name</th>

                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="d-flex justify-content-center">
                            @Html.ActionLink("Edit", "Edit", "Home", new { id = item.CategoryId }, new { @class = "btn btn-outline-primary waves-effect btn-sm shadow-none" })
                            @Html.ActionLink("Delete", "Delete", "Home", new { id = item.CategoryId }, new { @class = "btn btn-outline-danger waves-effect btn-sm shadow-none" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}


